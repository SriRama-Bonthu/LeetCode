class Solution {
    public int maxScore(String s) {
        int totalOne=0;
        for(int i=0;i<s.length();i++){
            if(s.charAt(i)=='1'){
                totalOne++;
            }
        } 
        int zerocnt=0;
        int onecnt=0; 
        int max=0;      
        for(int i=0;i<s.length()-1;i++){
            if(s.charAt(i)=='0'){
                zerocnt++;
            }
            else{
                onecnt++;
            }
            max=Math.max(max,(zerocnt+(totalOne-onecnt)));
        }
        return max;
    }
}
