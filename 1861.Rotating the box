class Solution {
    public char[][] rotateTheBox(char[][] grid) {
        int m=grid.length;
        int n=grid[0].length;
        char[][] box=new char[n][m];
        for(int i=0;i<m;i++){
            int j=grid[i].length-1;
            int k=n-1;
            while(j>=0){
                if(grid[i][j]=='*' ){
                        k=j-1;
                }
                else if((grid[i][j]=='#')){
                    grid[i][j]='.';
                    grid[i][k]='#';
                    k--;
                }
            j--;
            }
        }
        for(int i=0;i<box.length;i++){
            for(int j=0;j<box[i].length;j++){
                box[i][j]=grid[m-1-j][i];
            }
        }
        return box;
    }
}
