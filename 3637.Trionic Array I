class Solution {
    public boolean isTrionic(int[] nums) {
        int i=0;
        while(i<nums.length-1 && nums[i]<nums[i+1]){
            i++;
        }
        if(i==0){
            return false;
        }
        int j=i;
        while(j<nums.length-1 && nums[j]>nums[j+1]){
            j++;
        }
        if(j==nums.length-1 || j==0){
            return false;
        }
        int l=j;
        while(l<nums.length-1 && nums[l]<nums[l+1]){
            l=l+1;
        }
        return l==nums.length-1;

    }
}
