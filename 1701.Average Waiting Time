class Solution {
    public double averageWaitingTime(int[][] customers) {
        int[] arr=new int[customers.length];
        int s=1;
        for(int i=0;i<customers.length;i++){
            if(customers[i][0]>s){
                s=customers[i][0]+customers[i][1];
                arr[i]=customers[i][1];
            }
            else{
            s=s+customers[i][1];
            arr[i]=s-customers[i][0];
            }
        }
        double avg=0;
        long sum=0;
        for(int j=0;j<arr.length;j++){
            sum=sum+arr[j];
        }
        avg=(double)sum/arr.length;
        return avg;
    }
}
