class Solution {
    public int numOfSubarrays(int[] arr, int k, int threshold) {
        int i=0;
        int s=0;
        int c=0;
        for(int j=0;j<arr.length;j++){
            s=s+arr[j];
            if(j-i+1==k){
                if((s/k)>=threshold){
                    c++;
                }
                s-=arr[i];
                i++;
            }
        }
        return c;
    }
}
