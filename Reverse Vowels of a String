class Solution {
    public String reverseVowels(String s) {
        char[] arr=s.toCharArray();
        int i=0;
        int j=arr.length-1;
        while(i<j){
            if("aeiouAEIOU".indexOf(arr[i])==-1){
                i++;
                continue;
            }
            else if("aeiouAEIOU".indexOf(arr[j])==-1){
                j--;
                continue;
            }
            else{
                char temp=arr[i];
                arr[i]=arr[j];
                arr[j]=temp;
                i++;
                j--;
            }
        }
        String res="";
        for(char ch:arr){
            res=res+ch;
        }
        return res;
    }
}
