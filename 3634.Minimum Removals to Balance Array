class Solution {
    public int minRemoval(int[] nums, int k) {
        Arrays.sort(nums);
        int i=0;
        int j=0;
        int n=nums.length;
        int min=n;
        while(i<n){
            while(j<n && nums[j]<=k*(long)nums[i]){
                min=Math.min(n-(j-i+1),min);
                j++;
            }
            i++;
        }
        return min;
    }
}
