class Solution {
    public int minimumDifference(int[] nums, int k) {
        Arrays.sort(nums);
        int j=0;
        int res=Integer.MAX_VALUE;
        for(int i=0;i<nums.length;i++){
            if(i-j+1==k){
                res=Math.min((nums[i]-nums[j]),res);
                j++;
            }
        }
        return res;
    }
}
